@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Access Denied</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background: linear-gradient(135deg, #f5f7fa, #c3cfe2);
            height: 100vh;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        .access-denied-container {
            text-align: center;
            background: white;
            padding: 3rem;
            border-radius: 15px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        .access-denied-title {
            font-size: 3rem;
            font-weight: bold;
            color: #dc3545;
        }
        .access-denied-message {
            margin: 1rem 0;
            color: #6c757d;
            font-size: 1.25rem;
        }
        .btn-home {
            background: linear-gradient(135deg, #5a2d91, #6f42c1, #8a57d6);
            border: none;
            color: white;
            font-size: 1rem;
            padding: 0.75rem 1.5rem;
            border-radius: 50px;
            text-transform: uppercase;
            letter-spacing: 1px;
            transition: all 0.3s ease;
        }
        .btn-home:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(42, 88, 240, 0.3);
        }
    </style>
</head>
<body>
    <div class="access-denied-container">
        <div class="mb-4">
            <i class="bi bi-shield-lock-fill text-danger" style="font-size: 4rem;"></i>
        </div>
        <h1 class="access-denied-title">Access Denied</h1>
        <p class="access-denied-message">
            You do not have the required permissions to access this page. Please contact the administrator if you believe this is an error.
        </p>
        <a href="@Url.Action("Index","Pages")" class="btn btn-home mt-3">Go to Homepage</a>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
