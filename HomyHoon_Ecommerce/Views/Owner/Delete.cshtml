@model HomyHoon.Models.Apartment

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Delete Apartment</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+Knujsl5+5hb7O1iRYnCFLhFpaWlhcV2C2gpjlYni3X5F0U" crossorigin="anonymous">
</head>
<body>
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <div class="card shadow-sm">
                    <div class="card-header bg-danger text-white">
                        <h3 class="mb-0">Delete Apartment</h3>
                    </div>
                    <div class="card-body">
                        <h4>Are you sure you want to delete this apartment?</h4>
                        <div class="mb-4">
                            <strong>Apartment Name:</strong> @Model.Name<br />
                            <strong>Address:</strong> @Model.Address<br />
                            <strong>City:</strong> @Model.City<br />
                            <strong>Price per Night:</strong> $@Model.PricePerNight
                        </div>

                        <form asp-action="DeleteConfirmed" method="post">
                            <input type="hidden" asp-for="Id" />
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                                <button type="submit" class="btn btn-danger">Delete Apartment</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.11.6/dist/umd/popper.min.js" integrity="sha384-oBqDVmMz4fnFO9gybByvxM/sfwc5h7lOvJpOUENzg2kRo7WqAAtK7LD/TH/Aa5av" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWld9dBx2Ua43nxKuOGPqkh0y8HIFl6NtKw7L/zk" crossorigin="anonymous"></script>
</body>
</html>
