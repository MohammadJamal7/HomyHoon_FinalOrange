                    </a>
                </div>
            </div>

        </nav>

    </div>

    <div class="container-fluid shadow mt-5 rounded p-4" style="width: 95%; height: auto;">
        <div class="row">
            <div class="col text-center mb-4">
                <h2>Add Your Apartment</h2>
            </div>
        </div>

        <form asp-action="AddApartment" asp-controller="Owner" method="post" enctype="multipart/form-data">
            <div class="row">
                <div class="col">
                    <span class="fs-6 me-1 fw-bold">General information</span> <span><img src="Assets/check.svg" alt=""></span>
                </div>
            </div>

            <!-- Form Section -->
            <div class="row mt-4">
                <div class="col-sm-12 col-md-4">
                    <label asp-for="Apartment.Name" class="fw-semibold"><small>Title</small></label>
                    <input asp-for="Apartment.Name" class="form-control bg-light" placeholder="Enter apartment title" style="height: 32px;">
                    <span asp-validation-for="Apartment.Name" class="text-danger"></span>
                </div>
                <div class="col-sm-12 col-md-4">
                    <label asp-for="Apartment.CategoryId" class="fw-semibold"><small>Category</small></label>
                    <select asp-for="Apartment.CategoryId" class="form-select bg-light" style="height: 32px;">
                        <option value="">Select a category</option>
                        @foreach (var category in Model.Categories)
                        {
                            if (category.Id == Model.Apartment.CategoryId)
                            {
                                <option value="@category.Id" selected>@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="Apartment.CategoryId" class="text-danger"></span>
                </div>
                <div class="col-sm-12 col-md-4">
                    <label asp-for="Apartment.PricePerNight" class="fw-semibold"><small>Price per Night ($)</small></label>
                    <input asp-for="Apartment.PricePerNight" class="form-control bg-light" placeholder="Enter price per night" style="height: 32px;">
                    <span asp-validation-for="Apartment.PricePerNight" class="text-danger"></span>
                </div>
            </div>

            <div class="row pt-4 g-3">
                <div class="col-sm-12 col-md-3">
                    <label asp-for="Apartment.Rooms" class="fw-semibold"><small>Rooms</small></label>
                    <input asp-for="Apartment.Rooms" class="form-control bg-light" type="number" min="1" placeholder="Number of rooms" style="height: 32px;">
                    <span asp-validation-for="Apartment.Rooms" class="text-danger"></span>
                </div>

                <div class="col-sm-12 col-md-3">
                    <label asp-for="Apartment.Beds" class="fw-semibold"><small>Beds</small></label>
                    <input asp-for="Apartment.Beds" class="form-control bg-light" type="number" min="1" placeholder="Number of beds" style="height: 32px;">
                    <span asp-validation-for="Apartment.Beds" class="text-danger"></span>
                </div>

                <div class="col-sm-12 col-md-3">
                    <label asp-for="Apartment.Baths" class="fw-semibold"><small>Baths</small></label>
                    <input asp-for="Apartment.Baths" class="form-control bg-light" type="number" min="1" placeholder="Number of baths" style="height: 32px;">
                    <span asp-validation-for="Apartment.Baths" class="text-danger"></span>
                </div>

                <div class="col-sm-12 col-md-3">
                    <label asp-for="Apartment.MaxGuests" class="fw-semibold"><small>Allowed Guests</small></label>
                    <input asp-for="Apartment.MaxGuests" class="form-control bg-light" type="number" min="1" placeholder="Maximum guests" style="height: 32px;">
                    <span asp-validation-for="Apartment.MaxGuests" class="text-danger"></span>
                </div>
            </div>

            <div class="row pt-4">
                <div class="col-sm-12 col-md-4">
                    <label asp-for="Apartment.IsFrunshised" class="fw-semibold"><small>Furnished</small></label>
                    <select asp-for="Apartment.IsFrunshised" class="form-select bg-light" style="height: 32px;">
                        <option value="true">Yes</option>
                        <option value="false">No</option>
                    </select>
                    <span asp-validation-for="Apartment.IsFrunshised" class="text-danger"></span>
                </div>
            </div>

            <!-- Description and Features -->
            <div class="row pt-4">
                <div class="col-lg-6 col-sm-12">
                    <label asp-for="Apartment.Description" class="fw-semibold"><small>Description</small></label>
                    <textarea asp-for="Apartment.Description" rows="5" class="form-control bg-light" placeholder="Write something to describe your apartment..."></textarea>
                    <span asp-validation-for="Apartment.Description" class="text-danger"></span>
                </div>
                <div class="col-lg-6 col-sm-12">
                    <label class="fw-semibold"><small>Features</small></label>
                    <div class="row">
                        <div class="col-6">
                            <div class="form-check">
                                <input asp-for="Apartment.Kitchen" class="form-check-input" type="checkbox">
                                <label class="form-check-label">Kitchen</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Apartment.FirstAid" class="form-check-input" type="checkbox">
                                <label class="form-check-label">First Aid</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Apartment.TV" class="form-check-input" type="checkbox">
                                <label class="form-check-label">TV</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Apartment.Wifi" class="form-check-input" type="checkbox">
                                <label class="form-check-label">Wifi</label>
                            </div>
                        </div>
                        <div class="col-6">
                            <div class="form-check">
                                <input asp-for="Apartment.Parking" class="form-check-input" type="checkbox">
                                <label class="form-check-label">Parking</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Apartment.AirConditioning" class="form-check-input" type="checkbox">
                                <label class="form-check-label">Air Conditioning</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="Apartment.Heating" class="form-check-input" type="checkbox">
                                <label class="form-check-label">Heating</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Apartment.User" value="@User.Identity.Name" />
            <input type="hidden" asp-for="Apartment.MainImage" value="default-image-path.jpg" />

            <hr class="mt-5">

            <!-- Media and Location Section -->
            <div class="row mt-6">
