<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - HomyHoon</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HomyHoon.styles.css" asp-append-version="true" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.0/jquery.validate.unobtrusive.min.js"></script>
    <link rel="stylesheet" href="/css/site.css?v=@DateTime.Now.Ticks">

    <meta name="google" content="notranslate">
 
    <script type="text/javascript" src="https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit"></script>
    <style>
        .purple {
            background-color: #6f42c1; /* Custom purple color */
            color: white;
        }

        .purple-color {
            color: #6f42c1;
        }

        .purple-without-hover {
            background-color: #6f42c1; /* Custom purple color */
            color: white;
        }

        .purple:hover {
            background-color: #5a379d; /* Darker purple on hover */
            color: white;
        }

        .outlined-purple {
            border: 1px solid #6f42c1;
            color: #5a379d;
        }

            .outlined-purple:hover {
                background-color: #6f42c1; /* Custom purple color */
                color: white;
            }


        .page-link {
            color: #6f42c1; /* Normal state color */
        }

            .page-link:hover {
                color: #5a379c; /* Slightly darker shade on hover */
            }

        .page-item.active .page-link {
            background-color: #6f42c1; /* Background color for active link */
            color: white; /* White text for active link */
            border-color: #6f42c1;
        }

            .page-item.active .page-link:hover {
                background-color: #5a379c; /* Darker background on hover for active link */
                color: white;
            }

        #google_translate_element {
            position: relative;
            z-index: 1050; /* Ensure it's above other elements but below modal z-index */
        }

            #google_translate_element .goog-te-combo {
                padding: 5px;
                margin-right: 10px;
                border: 1px solid #ddd;
                border-radius: 4px;
                background-color: white;
            }

        /* Prevent dropdown from hiding navigation */
      

       
    </style>
</head>
<body>

     
    <div class="navbar navbar-expand-lg navbar-light bg-light shadow-sm py-1 fixed-top">
        <div class="container-fluid">
            <a href="#" class="navbar-brand ms-5">
                <img src="@Url.Content("~/images/logo.png")" alt="" width="150">
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link px-5" href="@Url.Action("Index","Pages")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-5" href="@Url.Action("Index","Apartments")">Discover</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link px-5" href="@Url.Action("AboutUs","Pages")">About Us</a>
                    </li>
                </ul>
                <!-- Google Translate Widget -->
                
                <div class="d-flex gap-4 ms-auto me-lg-5">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <form asp-controller="Account" asp-action="SignOut" method="post">
                            <button class="btn btn-outline-dark" type="submit">Sign Out</button>
                        </form>
                        <button class="btn purple">
                            <a href="@Url.Action("Index", "Owner")" style="text-decoration: none; color: inherit;">Profile</a>
                        </button>
                    }
                    else
                    {
                        <button class="btn btn-outline-dark">
                            <a href="@Url.Action("Login", "Account")" style="text-decoration: none; color: inherit;">Login</a>
                        </button>
                        <button class="btn purple">
                            <a href="@Url.Action("Register", "Account")" style="text-decoration: none; color: inherit;">Join Us</a>
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- Main content section -->
    <main role="main" class="container">
        @RenderBody()
    </main>

    <!-- Footer section -->
    <!-- Footer -->
    <div class="container-fluid bg-light" style="height: auto; margin-top: 100px;">
        <div class="container">
            <div class="row align-items-center py-4">
                <!-- Logo Column -->
                <div class="col-12 col-md-4 text-center mb-4 mb-md-0">
                    <img src="@Url.Content("~/images/logo_footer.png")" class="img-fluid" style="max-height: 150px;" alt="Logo">
                    <div id="google_translate_element" class="me-3 bg-light"></div>
                </div>
                <!-- Links Columns -->
                <div class="col-12 col-md-8">
                    <div class="row justify-content-end align-items-start g-lg-5">
                        <!-- Products Column -->
                        <div class="col-4 col-md-3 text-center text-md-start">
                            <p class="fw-bold mb-3">Appartments</p>
                            <div class="d-flex flex-column gap-2">
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Villas</a>
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Flats</a>
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Studios</a>
                            </div>
                        </div>
                        <!-- Registration Column -->
                        <div class="col-4 col-md-3 text-center text-md-start">
                            <p class="fw-bold mb-3">Register</p>
                            <div class="d-flex flex-column gap-2">
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">As Renter</a>
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">As Owner</a>
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover">Log out</a>
                            </div>
                        </div>
                        <!-- Social Column -->
                        <div class="col-4 col-md-3 text-center text-md-start">
                            <p class="fw-bold mb-3">Social links</p>
                            <div class="d-flex flex-column gap-2">
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover d-flex align-items-center justify-content-center justify-content-md-start">
                                    <img src="@Url.Content("~/images/facebook.png")" width="30" alt="" class="me-2">Facebook
                                </a>
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover d-flex align-items-center justify-content-center justify-content-md-start">
                                    <img src="@Url.Content("~/images/instagram.png")" width="30" alt="" class="me-2">Instagram
                                </a>
                                <a href="#" class="link-dark link-offset-2 link-underline-opacity-25 link-underline-opacity-100-hover d-flex align-items-center justify-content-center justify-content-md-start">
                                    <img src="@Url.Content("~/images/Whatsapp.png")" width="30" alt="" class="me-2">Whatsapp
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Footer Copyright -->
            <div class="row">
                <div class="col-12">
                    <p class="text-center border-top pt-3">© 2024 Brand, Inc. • HomyHoon • Orange • Final project</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->

                <script src="~/lib/jquery/dist/jquery.min.js"></script>
                <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
                <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script type="text/javascript">
        function googleTranslateElementInit() {
            try {
                new google.translate.TranslateElement({
                    pageLanguage: 'en',
                    includedLanguages: 'en,ar,fr,es', // Expanded language options
                    layout: google.translate.TranslateElement.InlineLayout.DROPDOWN,
                    autoDisplay: false
                }, 'google_translate_element');
            } catch (error) {
                console.error('Google Translate initialization error:', error);
            }
        }

        // Dynamically load Google Translate script
        (function () {
            var googleTranslateScript = document.createElement('script');
            googleTranslateScript.type = 'text/javascript';
            googleTranslateScript.async = true;
            googleTranslateScript.src = 'https://translate.google.com/translate_a/element.js?cb=googleTranslateElementInit';
            document.body.appendChild(googleTranslateScript);
        })();
    </script>
                @await RenderSectionAsync("Scripts", required: false)
               
</body>
</html>
